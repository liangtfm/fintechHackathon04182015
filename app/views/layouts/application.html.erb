<!DOCTYPE html>
<html>
<head>
  <title>Affinity</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <link href='//fonts.googleapis.com/css?family=Open+Sans:400italic,400,700,300' rel='stylesheet' type='text/css'>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
</head>
<body>

<nav>
  <h3 href="/" class='logo'>Affinity</h3>

  <div class="actions">
  <% if current_user %>
    <a href='/profile' class='profile'>
      Signed in as <%= current_user.name %>
    </a> &nbsp; &nbsp;
  	<%= link_to 'Log out', logout_path, {class: 'logout'} %>
  <% else %>
    <%= link_to 'Log in with Twitter', '/auth/twitter', {class: 'twitter'} %>
  <% end %>
  </div>
</nav>

<%= yield %>

</body>
</html>
